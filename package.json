{
  "name": "falconcore-monorepo",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:landing": "pnpm --filter @falconcore/landing dev",
    "dev:ahau": "pnpm --filter @falconcore/ahau dev",
    "dev:pulzio": "pnpm --filter @falconcore/pulzio-frontend dev",
    "build:landing": "pnpm --filter @falconcore/landing build",
    "build:ahau": "pnpm --filter @falconcore/ahau build",
    "build:pulzio": "pnpm --filter @falconcore/pulzio-frontend build",
    "build:all": "pnpm build:landing && pnpm build:ahau && pnpm build:pulzio",
    "install:all": "pnpm install",
    "clean": "powershell -NoProfile -Command \"Remove-Item -Path 'packages/*/node_modules','packages/*/.next','packages/*/out','node_modules' -Recurse -Force -ErrorAction SilentlyContinue\"",
    "predeploy": "powershell -ExecutionPolicy Bypass -File .\\scripts\\build-for-hosting.ps1",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:all": "pnpm predeploy && firebase deploy"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5"
  }
}
