{
  "hosting": [
    {
      "target": "yeka",
      "public": "frontends/dist/yeka",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**/*.js",
          "headers": [
            {
              "key": "Content-Type",
              "value": "application/javascript"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "pulziohq",
      "public": "frontends/dist/pulziohq",
      "ignore": [
        "firebase.json",
